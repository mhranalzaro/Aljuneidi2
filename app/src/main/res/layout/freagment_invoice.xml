<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <GridLayout
            android:columnCount="2"
            android:rowCount="5"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.2"
                android:layout_rowWeight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
        >

            <LinearLayout
                    android:id="@+id/ly_StartCustomerSale"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/salescustomeiconn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="20sp"
                        android:text="البيع"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.2"
                android:layout_rowWeight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
        >

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/documentcustomer"
                        android:layout_width="80dp"
                        android:layout_height="88dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="20sp"
                        android:text="المستندات"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.2"
                android:layout_rowWeight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
        >

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/cashbackcustomer"
                        android:layout_width="80dp"
                        android:layout_height="88dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="20sp"
                        android:text="التحصيل"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.2"
                android:layout_rowWeight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="20dp"
        >

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/ordercustomer"
                        android:layout_width="80dp"
                        android:layout_height="88dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="20sp"
                        android:text="الطبيات"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </GridLayout>
</RelativeLayout>