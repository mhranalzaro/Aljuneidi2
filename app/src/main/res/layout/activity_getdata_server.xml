<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".getdataServer"
        android:padding="5dp"

>
    <TextView
            android:id="@+id/tv_ProgressPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lst_getdataserver"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textSize="19sp"


    />
    <ProgressBar
            android:layout_marginTop="8dp"
            android:id="@+id/prog_GetDataServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
android:layout_below="@id/tv_ProgressPercentage"
            android:layout_marginBottom="20dp"/>
    <TextView
            android:id="@+id/tv_Prog_Status"
            android:layout_width="wrap_content"
            android:text="Loadding Complite ..."
            android:layout_height="wrap_content"
            android:layout_below="@id/prog_GetDataServer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
    />
    <ListView
            android:layout_width="401dp"
            android:layout_height="390dp"
            android:id="@+id/lst_getdataserver"
            android:foregroundGravity="center"
            android:layout_marginBottom="8dp"

    />




    <LinearLayout
            android:layout_below="@id/prog_GetDataServer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
   >
        <Button

                android:layout_marginLeft="10dp"
                android:text="خروج"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_ExistAndGoBack"
                android:background="@drawable/selector"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                android:fontFamily="sans-serif-condensed-medium"


        />
        <Button
                android:layout_marginLeft="10dp"
                android:text="تسجيل الدخول"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_LoginBageReturnBack"
                android:background="@drawable/selector"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                android:fontFamily="sans-serif-condensed-medium"


        />

    </LinearLayout>
</RelativeLayout>