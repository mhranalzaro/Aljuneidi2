<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".adminpage">


    <ImageView

            android:layout_gravity="center"
            android:layout_width="167dp"
            android:layout_height="136dp"
            android:src="@drawable/logohome"

    />
    <TextView
            android:id="@+id/salesman"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="بيانات المستخدم"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4157bc"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
    />
    <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|textEmailAddress"
            android:ems="10"
            android:id="@+id/tv_salesman"
            android:drawableRight="@drawable/user"
            android:hint="salesman"
            android:layout_marginTop="25dp"
            android:textColor="#0d0101"
            android:paddingLeft="0dp"
            android:drawablePadding="5dp"
            android:textColorHint="#999"
            android:textAlignment="center"/>
    <EditText
android:id="@+id/tv_serverip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableRight="@drawable/ip"
            android:hint="serverip"
            android:layout_marginTop="5dp"
            android:textColor="#0d0101"
            android:paddingLeft="0dp"
            android:drawablePadding="5dp"
            android:textColorHint="#999"
            android:textAlignment="center"/>
    <EditText
android:id="@+id/tv_printername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableRight="@drawable/printere"
            android:hint="prenterName"
            android:layout_marginTop="5dp"
            android:textColor="#0d0101"
            android:paddingLeft="0dp"
            android:drawablePadding="5dp"
            android:textColorHint="#999"
            android:textAlignment="center"/>
    <EditText
android:id="@+id/tv_printerpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableRight="@drawable/lock"
            android:hint="prenterPassword"
            android:layout_marginTop="5dp"
            android:textColor="#0d0101"
            android:paddingLeft="0dp"
            android:drawablePadding="5dp"
            android:textColorHint="#999"
            android:textAlignment="center"/>
    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_below="@id/tv_printerpassword"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
    >
        <Button
                android:layout_marginLeft="10dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="حفظ البيانات"
                android:id="@+id/btn_UserInfoUpdate"
                android:background="@drawable/selector"
                android:layout_gravity="center_horizontal"
                android:textSize="19sp"
                android:textColor="#FFFFFF"

        />
        <Button
                android:id="@+id/btn_layout_sync"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="مزامنة البيانات"
                android:background="@drawable/selector"
                android:layout_gravity="center_horizontal"
                android:textSize="19sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"


        />


    </LinearLayout>
    <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_syncData"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="مزامنة البيانات"
            android:background="@drawable/selector"
            android:layout_gravity="center_horizontal"
            android:textSize="19sp"
            android:textColor="#FFFFFF"
            android:visibility="invisible"


    />

</LinearLayout>