<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp">
    <ImageView

            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="177dp"
            android:src="@drawable/logohome"


    />
    <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="تسجيل الدخول"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:textColor="#4157bc"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
    />
    <TextView
            android:id="@+id/tv_salesmanName"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="شركة الجنيدي لتصنيع الالبان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ed3926"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
    />
    <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/username"
            android:drawableRight="@drawable/user"
            android:hint="رقم الموزع"
            android:layout_marginTop="40dp"
            android:textColor="#0d0101"
            android:paddingLeft="0dp"
            android:drawablePadding="5dp"
            android:textColorHint="#999"
            android:textAlignment="center"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:drawableRight="@drawable/lock"
            android:hint="كلمة المرور"
            android:layout_marginTop="10dp"
            android:textColor="#0d0101"
            android:textAlignment="center"
            android:paddingLeft="0dp"
            android:drawablePadding="5dp"
            android:textColorHint="#999"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="تسجيل الدخول"
            android:id="@+id/btn_login"
            android:background="@drawable/selector"
            android:layout_gravity="center_horizontal"
            android:onClick="checkLogin"
            android:textColor="#FFFFFF"
    />
    <TextView
            android:id="@+id/tv_ErrorLogin"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="شركة الجنيدي لتصنيع الالبان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ed3926"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:visibility="invisible"
    />



</LinearLayout>

