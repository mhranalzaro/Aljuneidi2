<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"

>

<LinearLayout
        android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
>

<RelativeLayout
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

>
    <TextView
            android:id="@+id/tv_SalesmanNameDashboard"
            android:text=" وجدي الخطيب"
            android:textSize="20sp"
            android:textColor="#ed3926"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="180dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"

    />
    <TextView
android:id="@+id/tv_SalesmanNumberDashboard"
            android:layout_marginTop="6dp"
            android:layout_marginRight="200dp"
            android:layout_below="@id/tv_SalesmanNameDashboard"
            android:text="222"
            android:textSize="14sp"
            android:textColor="#2F0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:gravity="center"
android:textAlignment="center"
    android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/logohome"
android:layout_width="82dp"
android:layout_height="82dp"/>
    
</RelativeLayout>
    <GridLayout
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<android.support.v7.widget.CardView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_columnWeight="1"
android:layout_rowWeight="1"
app:cardElevation="6dp"
app:cardCornerRadius="12dp"
android:layout_margin="12dp"
>

<LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView

            android:src="@drawable/printericon"
            android:layout_width="88dp"
               android:layout_height="88dp"
    />
    <TextView
            android:layout_marginTop="12dp"
            android:textColor="#6f6f6f"
            android:textSize="20sp"
            android:text="الطابعة"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />

</LinearLayout>

</android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
        >

            <LinearLayout
                    android:id="@+id/ly_SalesmanTrip"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/salesmandowork"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp"
                        android:text="المسار"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
        >

            <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/bookmark"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp"
                        android:text="Calender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
        >

            <LinearLayout
                    android:id="@+id/ly_ExistSalesman"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView

                        android:src="@drawable/logouticon"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                />
                <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp"
                        android:text="خروج"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>




    </GridLayout>

</LinearLayout>

</ScrollView>