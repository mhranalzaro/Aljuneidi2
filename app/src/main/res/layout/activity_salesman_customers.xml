<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".salesman_customers">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
    >
        <GridLayout
                android:columnCount="1"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >

            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="2dp"
                    android:layout_margin="2dp"

            >

                <LinearLayout
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_gravity="center"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:src="@drawable/hero_banner_blue"


                    />

                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:padding="20dp"
                >




                    <LinearLayout

                            android:layout_marginTop="10dp"
                          android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                    >
                    <TextView
                            android:id="@+id/tv_TotalWantedVisitToday"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                    />
                        <TextView
                                android:layout_gravity="right"
                                android:text="الزيارات المستهدفة"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/wantvisit"
                                android:drawablePadding="2dp"
                        />
                </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                    >
                        <TextView
                                android:id="@+id/tv_VistedTodayDone"
                                android:layout_gravity="center"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                        />
                        <TextView
                                android:layout_gravity="right"
                                android:text="الزيارات المحققة"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/targted"
                                android:drawablePadding="2dp"
                        />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                    >
                        <TextView
                                android:id="@+id/tv_RemainUnVisted"
                                android:layout_gravity="center"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                        />
                        <TextView
                                android:layout_gravity="right"
                                android:text="الزيارات الفعالة"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:drawableRight="@drawable/remainvisit"
                                android:drawablePadding="2dp"
                        />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                >
                    <ProgressBar

                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/prog_percantge"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:max="100"
                            android:progress="1"

                    />
                    <TextView
                            android:id="@+id/tv_customersName"
                            android:layout_marginTop="5dp"
                            android:textColor="#6f6f6f"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                    />
                    <TextView
                            android:id="@+id/tv_customersBarcode"
                            android:layout_marginTop="5dp"
                            android:textColor="#6f6f6f"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                    />

                    <TextView
                            android:id="@+id/tv_BarcodeResult"
                            android:layout_marginTop="3dp"
                            android:textColor="#6f6f6f"
                            android:textSize="20sp"
                            android:text="..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="30dp"
                            android:layout_below="@id/tv_printerpassword"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                    >

                        <ImageView
                                android:id="@+id/btn_BackCustomer"
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="60dp"
                                android:src="@drawable/next"
                                android:rotation="180"
                                  android:paddingLeft="20dp"


                        />
                        <ImageView

                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="60dp"
                                android:src="@drawable/manullogin"
                                android:id="@+id/btn_Manualogin"


                        />
                        <ImageView
                                android:id="@+id/btn_NextCustomer"
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="60dp"
                                android:src="@drawable/next"
                                android:paddingLeft="20dp"

                        />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </GridLayout>
    </LinearLayout>












</ScrollView>